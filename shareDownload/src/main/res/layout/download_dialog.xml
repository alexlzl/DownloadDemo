<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/download_round_bg">
    <TextView
        android:layout_gravity="center_horizontal"
        android:textColor="@color/color_262C32"
        android:textSize="15sp"
        android:text="下载素材"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
 <LinearLayout
     android:orientation="horizontal"
     android:layout_width="match_parent"
     android:layout_height="wrap_content">
     <pl.droidsonroids.gif.GifImageView
         android:layout_width="15dp"
         android:layout_height="15dp"
         android:src="@drawable/download_loading"
         />
     <TextView
         android:textColor="@color/color_5A6066"
         android:textSize="15sp"
         android:text="文案已复制成功"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"/>
 </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <pl.droidsonroids.gif.GifImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/download_loading"
            />
        <TextView
            android:textColor="@color/color_5A6066"
            android:textSize="15sp"
            android:text="视频正在下载"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <pl.droidsonroids.gif.GifImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/download_loading"
            />
        <TextView
            android:textColor="@color/color_5A6066"
            android:textSize="15sp"
            android:text="小程序码图片正在下载"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <pl.droidsonroids.gif.GifImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/download_loading"
            />
        <TextView
            android:textColor="@color/color_5A6066"
            android:textSize="15sp"
            android:text="素材图片正在下载（3/6）"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>